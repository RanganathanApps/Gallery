<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:layout_height="wrap_content">

    <FrameLayout

            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/frameLayout">

        <RelativeLayout

                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/relativeLayout">
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_122sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imgAlbum"/>

            <ProgressBar
                    android:layout_centerInParent="true"
                    android:id="@+id/progressAlbum"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"/>

        </RelativeLayout>


    </FrameLayout>

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginTop="0dp"
            android:padding="@dimen/_2sdp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAlbum"
                android:textColor="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:text="dfhefjhefjefefe efre            rere        erere        erere ererere ererer  e rerere "
                android:layout_marginStart="@dimen/_3sdp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                android:layout_marginLeft="@dimen/_3sdp"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="wrap_content"
        android:src="@color/colorTrans"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAlbumCount"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_7sdp"
                android:text="@string/app_name_base"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>